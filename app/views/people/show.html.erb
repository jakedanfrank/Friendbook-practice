<p>Find me in app/views/people/show.html.erb</p>
<div class="ui card">
  <div class="image">
    <img src="https://robohash.org/<%= @person.avatar %>?set=set2" />
  </div>
  <div class="content">
    <h1 class="ui large header">
      @<%= @person.username %>
    </h1>
    <p class="ui small header">
      <%= @person.first_name %> <%= @person.last_name %>
    </p>
  </div>
  <div class="meta">
    <span class="date"> <%= @person.phone %></span>
  </div>
  <div class="description">
    <%= @person.email %>
  </div>
  <div class="extra content">
    <%= link_to "Edit", edit_person_path(@person)%> |
    <%= link_to "Back", people_path %>
  </div>
</div>
